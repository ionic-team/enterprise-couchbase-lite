{
  "name": "@ionic-enterprise/couchbase-lite",
  "version": "1.0.6",
  "description": "Couchbase Lite integration for Ionic Enterprise",
  "author": "Ionic Team <hi@ionic.io> (https://ionicframework.com)",
  "license": "SEE LICENSE",
  "cordova": {
    "id": "@ionic-enterprise/couchbase-lite",
    "platforms": [
      "android",
      "ios"
    ]
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && npm run transpile && npm run rollup && npm run minify",
    "minify": "uglifyjs --mangle --compress --source-map \"content='dist/ionic-enterprise-couchbase-lite.js.map',url='ionic-enterprise-couchbase-lite.js.map'\" --comments '/^/*!/' --output dist/ionic-enterprise-couchbase-lite.js dist/ionic-enterprise-couchbase-lite.js",
    "prepublishOnly": "npm run build",
    "rollup": "rollup --config rollup.config.js",
    "transpile": "tsc --module ES2015 --target ES5 --outDir dist/esm",
    "test": "jest",
    "docs": "./scripts/docs.sh",
    "release": "standard-version -a",
    "pre-release": "standard-version -a -p --skip.changelog=true --skip.tag=true"
  },
  "standard-version": {
    "scripts": {
      "postbump": "sync-cordova-xml2 package.json plugin.xml --output=plugin.xml && git add plugin.xml",
      "postchangelog": "./scripts/changelog-replace.sh && npm run docs && git add docs"
    }
  },
  "main": "dist/ionic-enterprise-couchbase-lite.js",
  "module": "dist/esm/index.js",
  "typings": "dist/esm/index.d.ts",
  "devDependencies": {
    "@angular/core": "^8.2.0",
    "@ionic/typedoc-plugin-markdown": "^1.0.5",
    "@types/cordova": "0.0.34",
    "@types/jest": "^21.1.8",
    "colorette": "^1.0.4",
    "jest": "^23.6.0",
    "np": "^5.0.3",
    "rimraf": "^2.6.3",
    "rollup": "^0.52.0",
    "rollup-plugin-node-resolve": "^3.0.3",
    "standard-version": "^7.0.0",
    "sync-cordova-xml2": "0.0.3",
    "ts-jest": "^23.10.1",
    "tslint": "^5.18.0",
    "tslint-ionic-rules": "0.0.21",
    "typedoc": "^0.15.0",
    "typescript": "^3.5.3",
    "uglify-js": "^3.2.0"
  },
  "bugs": {
    "url": "https://ionic.zendesk.com/hc/en-us"
  },
  "publishConfig": {
    "access": "restricted",
    "registry": "https://registry.npmjs.org"
  },
  "engines": {
    "cordovaDependencies": {
      "1.0.0": {
        "cordova-android": ">=6.3.0"
      },
      "2.0.0": {
        "cordova": ">100"
      }
    }
  },
  "dependencies": {
    "xcode": "~2.1.0"
  }
}
